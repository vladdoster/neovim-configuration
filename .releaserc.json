{
  "repositoryUrl": "https://github.com/vladdoster/neovim-configuration",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
	"preset": "conventionalcommits",
        "releaseRules": [
          { "type": "build", "release": "patch" },
          { "type": "chore", "release": "patch" },
          { "type": "ci", "release": "patch" },
          { "type": "docs", "release": "patch" },
          { "type": "init", "release": "major" },
          { "type": "maint", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "release", "release": "minor" },
          { "type": "style", "release": "patch" }
        ],
        "parserOpts": {
          "types": [
            { "type": "feat", "section": "Features" },
            { "type": "chore", "section": "Bug Fixes" },
            { "type": "ci", "section": "CI/CD"},
            { "type": "docs", "section": "Docs" },
            { "type": "fix", "section": "Bug Fixes" },
            { "type": "refactor", "section": "Refactor" },
            { "type": "style", "section": "Style" }
          ]
        }
      }
    ],
    "@semantic-release/commit-analyzer",
    [
      "@google/semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": ["README.md"],
            "from": "v([0-9]).+([0-9]).+([0-9])",
            "to": "v${nextRelease.version}",
            "results": [
              {
                "file": "README.md",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          },
          {
            "files": ["VERSION"],
            "from": "^([0-9]).+([0-9]).+([0-9])$",
            "to": "${nextRelease.version}",
            "results": [
              {
                "file": "VERSION",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["README.md", "CHANGELOG.md", "VERSION"],
        "message": "(release): bump ${lastRelease.version} â†’ ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
